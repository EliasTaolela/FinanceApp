@model FinanceApp.Models.Expense

@{
    ViewData["Title"] = "Delete Expense";
}

<h1>Delete Expense</h1>

<h3>Are you sure you want to delete this expense?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.Amount</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
